                  alt="{{ image.alt }}"
                >
              {%- else -%}
                <div class="thb-placeholder">
                  {{ 'lifestyle-1' | placeholder_svg_tag }}
                </div>
              {%- endif -%}
              </a>
            {%- endif -%}
            {%- if image_2 -%}
              <a
                href="{{section_link}}"
                class="slideshow__slide carousel__slide desktop-height-image shop-look_slide"
              ></a>
              {%- if image_2 -%}
