                        {%- render 'responsive-image', image: hotspot_product_3.featured_image, sizes: '150x0' -%}
                      </a>
                    {% endif %}
                    <div class="thb-hotspot-product-content">
                      <div class="thb-hotspot-product-title">{{ hotspot_product_3.title }}</div>
                      <div class="thb-hotspot-product-pricebox">
                        {% render 'product-price', product: hotspot_product_3 %}
                        <a class="thb-hotspot-product-view" href="{{ hotspot_product_3.url }}">View</a>
                      </div>
                    </div>
                  {%- endunless -%}
                </div>
              </quick-view>
            {% endif %}

            {% comment %}
              {%- assign hotspot_product_1 = all_products[block.settings.product_handle] -%}
              <quick-view
                class="thb-hotspot pin-white"
                style="left: {{- block.settings.x_position | append: '%' -}}; top: {{- block.settings.y_position | append: '%' -}};"
                data-product-handle="{{ hotspot_product_1.handle }}"
              >
                {% comment %} {{ block.shopify_attributes }} {% endcomment %}
                <div class="thb-hotspot-content thb-pulsate">
                  {%- unless hotspot_product_1 == empty -%}
                    <div class="loading-overlay">
                      {% render 'svg-icons' with 'thb-loading' %}
                    </div>
                    <div class="thb-hotspot-arrow"></div>
                    <div class="thb-hotspot-bubble">
                      {% if hotspot_product_1.featured_image %}
                        <a
                          href="{{ hotspot_product_1.url }}"
                          title="{{ hotspot_product_1.title | escape }}"
                          class="thb-hotspot-product-image"
                        >
                          {%- render 'responsive-image', image: hotspot_product_1.featured_image, sizes: '150x0' -%}
                        </a>
                      {% endif %}
                      <div class="thb-hotspot-product-content">
                        <div class="thb-hotspot-product-title">{{ hotspot_product_1.title }}</div>
                        <div class="thb-hotspot-product-pricebox">
                          {% render 'product-price', product: hotspot_product_1 %}
                          {% comment %}
                            {% assign text_button_title = 'sections.shop_the_look.view_product' | t %}
                            {% render 'text-button', url: hotspot_product_1.url, title: text_button_title %}
                          {% endcomment %}
                          <a class="thb-hotspot-product-view" href="{{ hotspot_product_1.url }}">View</a>
                        </div>
                      </div>
                    </div>
                  {%- endunless -%}
                </div>
              </quick-view>
            {% endcomment %}
            {% comment %} {% endfor %} {% endcomment %}
          </figure>
        </div>
        <div class="shop-look-flickity-viewport shop-the-look--desktop">
          {% for block in section.blocks %}
            {%- if block.image -%}
              <a href="{{section_link}}" class="slideshow__slide carousel__slide desktop-height-image shop-look_slide">
                {%- if block.image -%}
                  {%- liquid
                    assign image = block.image

                    assign class = ''
                    if block.image_mobile
                      assign class = 'slideshow-image--desktop'
                    endif
                  -%}
                  <img
                    data-src="{{ image | image_url }}"
                    class="lazyload {{ class }}"
                    width="{{ image.src.width }}"
                    height="{{ image.src.height }}"
                    alt="{{ image.alt }}"
                  >
                {%- else -%}
                  <div class="thb-placeholder">
                    {{ 'lifestyle-1' | placeholder_svg_tag }}
                  </div>
                {%- endif -%}
                {%- if block.image_mobile -%}
                  {%- liquid
                    assign image = block.image_mobile
                  -%}
                  <img
                    data-src="{{ image | image_url }}"
                    class="lazyload slideshow-image--mobile"
                    width="{{ image.src.width }}"
                    height="{{ image.src.height }}"
                    alt="{{ image.alt }}"
                  >
                {%- else -%}
                  <div class="thb-placeholder">
                    {{ 'lifestyle-1' | placeholder_svg_tag }}
                  </div>
                {%- endif -%}
              </a>
            {%- endif -%}
          {% endfor %}

