                    <div class="shop-look-buttons_item-content">
                      {% render 'svg-icons' with button_3_icon %}
                      <span>{{ button_3_text }}</span>
                    </div>
                  </li>
                {% endif %}
                {% if button_4_text != blank %}
                  <li class="shop-look-buttons_item" onclick="onChangeBackground">
                    <div class="shop-look-buttons_item-content">
                      {% render 'svg-icons' with button_4_icon %}
                      <span>{{ button_4_text }}</span>
                    </div>
                  </li>
                {% endif %}
                {% if button_5_text != blank %}
                  <li class="shop-look-buttons_item" onclick="onChangeBackground">
                    <div class="shop-look-buttons_item-content">
                      {% render 'svg-icons' with button_5_icon %}
                      <span>{{ button_5_text }}</span>
                    </div>
                  </li>
                {% endif %}
              {% endcomment %}
            </div>
          </div>
        </div>
        {% comment %} {%- endif -%} {% endcomment %}
        <div class="slideshow_inner">
          <figure class="shop-the-look--area shop-the-look--desktop shop-the-look--full-width-{{ full_width }}">
            {% comment %} {% for block in section.blocks %} {% endcomment %}
            {% if section.blocks[0] %}
              {%- assign hotspot_product_1 = all_products[block.settings.product_handle_1] -%}
              <quick-view
                class="thb-hotspot pin-white"
                style="left: {{- block.settings.x_position_1 | append: '%' -}}; top: {{- block.settings.y_position_1 | append: '%' -}};"
                data-product-handle="{{ hotspot_product_1.handle }}"
              >
                <div class="thb-hotspot-content thb-pulsate">
                  {%- unless hotspot_product_1 == empty -%}
                    <div class="loading-overlay">
                      {% render 'svg-icons' with 'thb-loading' %}
                    </div>
                    <div class="thb-hotspot-arrow"></div>
                    <div class="thb-hotspot-bubble"></div>
                    {% if hotspot_product_1.featured_image %}
                      <a
                        href="{{ hotspot_product_1.url }}"
                        title="{{ hotspot_product_1.title | escape }}"
                        class="thb-hotspot-product-image"
                      >
                        {%- render 'responsive-image', image: hotspot_product_1.featured_image, sizes: '150x0' -%}
                      </a>
                    {% endif %}
                    <div class="thb-hotspot-product-content">
                      <div class="thb-hotspot-product-title">{{ hotspot_product_1.title }}</div>
                      <div class="thb-hotspot-product-pricebox">
                        {% render 'product-price', product: hotspot_product_1 %}
                        <a class="thb-hotspot-product-view" href="{{ hotspot_product_1.url }}">View</a>
                      </div>
                    </div>
                  {%- endunless -%}
