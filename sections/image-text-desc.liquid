{{ 'image-text-desc.css' | asset_url | stylesheet_tag }}
{%- liquid
  assign section_heading = section.settings.heading
  assign section_description = section.settings.description
-%}

<div class="image-text-desc">
  <div class="row">
    <div class="small-12">
      {% render 'section-header', section_heading: section_heading %}
      {{ section_description }}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Image Text Desc",
  "class": "section-image-text-desc",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Collection",
      "info": "Wrap your text between | to add animated markers. For example: Animated |marker| will underline marker text."
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Describe your featured collection here</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile Background image (optional)"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Make section full width",
      "default": false
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "checkbox",
      "id": "disable_top_spacing",
      "default": false,
      "label": "Remove top spacing"
    },
    {
      "type": "checkbox",
      "id": "disable_bottom_spacing",
      "default": false,
      "label": "Remove bottom spacing"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "text",
          "id": "logo_heading",
          "label": "Heading",
          "default": "Logo list",
          "info": "Wrap your text between | to add animated markers. For example: Animated |marker| will underline marker text."
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Logo",
          "info": "240 x 100 px .png recommended."
        },
        {
          "type": "image_picker",
          "id": "cover_image",
          "label": "Logo_hover",
          "info": "240 x 100 px .png recommended."
        },
        {
          "id": "link",
          "type": "url",
          "label": "Link",
          "info": "Select an optional link."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Text Desc",
      "blocks": [
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        }
      ]
    }
  ]
}
{% endschema %}
