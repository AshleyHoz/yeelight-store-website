{%- liquid

-%}
<div class="scene-recommend">scene recommend</div>
{% schema %}
{
  "name": "Scene Recommend",
  "class": "yee-scene-recommend",
  "settings": [
    {
      "type": "paragraph",
      "content": "Each email subscription creates a customer account. [Learn more](https://help.shopify.com/en/manual/customers)"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Make section full width",
      "default": false
    },
    {
      "type": "header",
      "content": "content config"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Add a title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Add a subtitle"
    },
    {
      "type": "text",
      "id": "remark",
      "label": "Remark",
      "default": "Add a remark"
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "background_image_mobile",
      "label": "Mobile Image"
    },
    {
      "type": "header",
      "content": "Cover"
    },
    {
      "type": "image_picker",
      "id": "cover_image",
      "label": "Cover Image"
    },
    {
      "type": "image_picker",
      "id": "cover_image_mobile",
      "label": "Mobile Cover Image"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "color_bg",
      "label": "Background",
      "default": "#f5f5f5"
    },
    {
      "type": "color",
      "id": "color_text",
      "label": "Text",
      "default": "#2c2d2e"
    },
    {
      "type": "color",
      "id": "color_heading",
      "label": "Heading",
      "default": "#1a1c1d"
    },
    {
      "type": "color",
      "id": "color_border",
      "label": "Borders",
      "default": "#d3d3d3"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Overlay opacity",
      "default": 0
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "checkbox",
      "id": "disable_top_spacing",
      "default": false,
      "label": "Remove top spacing"
    },
    {
      "type": "checkbox",
      "id": "disable_bottom_spacing",
      "default": false,
      "label": "Remove bottom spacing"
    }
  ],
  "blocks": [
    {
      "type": "form",
      "name": "Newsletter form",
      "limit": 1,
      "settings": [
        {
          "type": "header",
          "content": "utm config"
        },
        {
          "type": "text",
          "id": "utm_source",
          "label": "utm source",
          "info": "Wrap the utm source."
        },
        {
          "type": "text",
          "id": "utm_medium",
          "label": "utm medium",
          "info": "Wrap the utm medium."
        },
        {
          "type": "text",
          "id": "utm_campaign",
          "label": "utm campaign",
          "info": "Wrap the utm campaign."
        },
        {
          "type": "text",
          "id": "tag",
          "label": "customer tag",
          "default": "newsletter",
          "info": "Wrap the customer tag."
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "info": "Wrap the apply link."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Scene Recommend",
      "blocks": [
        {
          "type": "form"
        }
      ]
    }
  ]
}
{% endschema %}
