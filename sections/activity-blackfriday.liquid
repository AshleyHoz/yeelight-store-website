{{ 'activity-blackfriday.css' | asset_url | stylesheet_tag }}
{{ 'product-grid.css' | asset_url | stylesheet_tag }}
{%- liquid
  assign section_title = section.settings.title
  assign image = section.settings.image
  assign image_mobile = section.settings.image_mobile
  assign background_image = section.settings.background_image
  assign background_image_mobile = section.settings.background_image_mobile
-%}

<div class="activity-blackfriday">
  <div class="activity-blackfriday-bg">
    <div class="activity-blackfriday-bg-icons">
      <div class="ic-spider-left">
        {%- render 'svg-icons-halloween' with 'custom-halloween-spider-part-left' -%}
      </div>
      <div class="ic-spider-right">
        {%- render 'svg-icons-halloween' with 'custom-halloween-spider-part-right' -%}
      </div>
      <div class="ic-ghost">
        {%- render 'svg-icons-halloween' with 'custom-halloween-ghost' -%}
      </div>
    </div>
  </div>
  {% comment %}
    <div class="activity-blackfriday--img">
      <div class="mobile-cover-img">
        {%- if background_image_mobile -%}
          {%- render 'responsive-image', image: background_image_mobile, sizes: background_image_mobile.src.width | append: 'x' | append: background_image_mobile.src.height -%}
        {%- endif -%}
      </div>
      <div class="cover-img">
        {%- if background_image -%}
          {%- render 'responsive-image', image: background_image, sizes: background_image.src.width | append: 'x' | append: background_image.src.height -%}
        {%- endif -%}
      </div>
    </div>
  {% endcomment %}
  <div class="row activity-blackfriday-row">
    {% if section_title %}
      <div class="activity-blackfriday-header">
        {% render 'section-header', section_heading: section_title %}
      </div>
    {% endif %}
    <div class="activity-blackfriday--product">
      {% for block in section.blocks %}
        <div class="product-item">
          {% render 'product-card', product_card_product: block.settings.product %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Activity Blackfriday",
  "class": "section-activity-blackfriday",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Header Title",
      "info": "Wrap your text."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "1440 x 650 px .jpg recommended."
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile image",
      "info": "750 x 800 px .jpg recommended. Default image is used if none is selected. To position the hotspots precisely, switch to mobile mode."
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "background_image_mobile",
      "label": "Mobile Background image (optional)"
    },
    {
      "type": "checkbox",
      "id": "halloween_hand_flag",
      "default": false,
      "label": "Show Halloween Hand"
    },
    {
      "type": "header",
      "content": "Section index"
    },
    {
      "type": "text",
      "id": "icon_position",
      "label": "Icon position",
      "info": "Wrap your text."
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Activity Blackfriday",
      "blocks": [
        {
          "type": "product"
        }
      ]
    }
  ]
}
{% endschema %}
