{{ 'activity-blackfriday.css' | asset_url | stylesheet_tag }}
{{ 'product-grid.css' | asset_url | stylesheet_tag }}
{%- liquid
  assign section_title = section.settings.title
-%}

<div class="activity-blackfriday">
  <div class="activity-blackfriday-bg">
    <div class="activity-blackfriday-bg-icons">
      <div
        class="ic-bg-left"
        style="position:absolute;left: {{- section.settings.left_x_position | append: '%' -}}; top: {{- section.settings.left_y_position | append: '%' -}};"
      >
        {%- render 'svg-icons-friday' with 'custom-friday-bg-left' -%}
      </div>
      <div
        class="ic-bg-right"
        style="position:absolute;left: {{- section.settings.right_x_position | append: '%' -}}; top: {{- section.settings.right_y_position | append: '%' -}};"
      >
        {%- render 'svg-icons-friday' with 'custom-friday-bg-right' -%}
      </div>
    </div>
  </div>
  {% comment %}
    <div class="activity-blackfriday--img">
      <div class="mobile-cover-img">
        {%- if background_image_mobile -%}
          {%- render 'responsive-image', image: background_image_mobile, sizes: background_image_mobile.src.width | append: 'x' | append: background_image_mobile.src.height -%}
        {%- endif -%}
      </div>
      <div class="cover-img">
        {%- if background_image -%}
          {%- render 'responsive-image', image: background_image, sizes: background_image.src.width | append: 'x' | append: background_image.src.height -%}
        {%- endif -%}
      </div>
    </div>
  {% endcomment %}
  <div class="row activity-blackfriday-row">
    {% if section_title %}
      <div class="activity-blackfriday-header">
        {% render 'section-header', section_heading: section_title %}
      </div>
    {% endif %}
    <div class="activity-blackfriday--product">
      {% for block in section.blocks %}
        <div class="product-item">
          {% render 'product-card', product_card_product: block.settings.product %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Activity Blackfriday",
  "class": "section-activity-blackfriday",
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "Header Title",
      "info": "Wrap your text."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "1440 x 650 px .jpg recommended."
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile image",
      "info": "750 x 800 px .jpg recommended. Default image is used if none is selected. To position the hotspots precisely, switch to mobile mode."
    },
    {
      "type": "header",
      "content": "Left Icon Position"
    },
    {
      "type": "range",
      "id": "left_x_position",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Horizontal",
      "default": 20,
      "info": "Horizontal position of the hot spot"
    },
    {
      "type": "range",
      "id": "left_y_position",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Vertical",
      "default": 20,
      "info": "Vertical position of the hot spot"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "header",
      "content": "Right Icon Position"
    },
    {
      "type": "range",
      "id": "right_x_position",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Horizontal",
      "default": 20,
      "info": "Horizontal position of the hot spot"
    },
    {
      "type": "range",
      "id": "righty_position",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Vertical",
      "default": 20,
      "info": "Vertical position of the hot spot"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Activity Blackfriday",
      "blocks": [
        {
          "type": "product"
        }
      ]
    }
  ]
}
{% endschema %}
