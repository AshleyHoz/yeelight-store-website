{%- liquid
  assign full_width = section.settings.full_width
  assign background_image = section.settings.background_image
  assign background_image_mobile = section.settings.background_image_mobile

  assign disable_top_spacing = section.settings.disable_top_spacing
  assign disable_bottom_spacing = section.settings.disable_bottom_spacing
  assign color_bg = section.settings.color_bg
  assign color_text = section.settings.color_text
  assign color_heading = section.settings.color_heading
  assign color_border = section.settings.color_border
  assign overlay_color = section.settings.overlay_color
  assign overlay_opacity = section.settings.overlay_opacity
-%}
<div class="row {% if full_width %} full-width-row-full{% endif %}">
  <div class="small-12 columns">
    <div class="activity-samsung--bg full-width full-height">
      <div class="bg-desktop">
        {%- liquid
          assign background_image = section.settings.background_image
          assign master_width = background_image.src.width | append: 'x' | append: background_image.src.height
          render 'responsive-image', image: background_image, sizes: master_width, retina: true
        -%}
      </div>
      <div class="bg-mobile">
        {%- liquid
          assign background_image_mobile = section.settings.background_image_mobile
          assign master_width = background_image_mobile.src.width | append: 'x' | append: background_image_mobile.src.height
          render 'responsive-image', image: background_image_mobile, sizes: master_width, retina: true
        -%}
      </div>
    </div>
    <div
      class="activity-samsung activity-samsung--full-width-{{ full_width }} section-spacing-padding{% if disable_top_spacing %} section-spacing--disable-top{% endif %}{% if disable_bottom_spacing %} section-spacing--disable-bottom{% endif %}"
      style="
        --bg-body: {{ color_bg }};
        --color-bg: {{ color_bg }};
        --color-body:{{ color_text }};
         --color-body-rgb:{{ color_text.rgb | replace: ' ' , ',' }};
         --color-heading:{{ color_heading }};
         --color-form-border:{{ color_border }};
         --overlay-opacity: {{ overlay_opacity | divided_by: 100.0 }};
         --color-overlay-rgb: {{ overlay_color.rgb | replace: ' ' , ',' }};
         {% if background_image %}
         --background-image:url({{background_image | image_url: width: background_image.width}});
         {% endif %}
         {% if background_image_mobile %}
         --background-image-mobile:url({{background_image_mobile | image_url: width: background_image_mobile.width}})
         {% endif %}
      "
    >
      {%- render 'section-header',
        section_heading: section.settings.title,
        section_description: section.settings.subtitle
      -%}
      <div class="activity-samsung--content position-relative full-width full-height">
        <div class="activity-samsung--cover text-right">
          {%- if section.settings.cover_image -%}
            {%- liquid
              assign cover_image = section.settings.cover_image
              assign master_width = cover_image.src.width | append: 'x' | append: cover_image.src.height
              render 'responsive-image', image: cover_image, sizes: master_width, retina: true
            -%}
          {%- else -%}
            <div class="thb-placeholder">
              {{ 'image' | placeholder_svg_tag: 'placeholder_svg_tag' }}
            </div>
          {%- endif -%}
        </div>
        <div class="activity-samsung--cover-mobile full-width text-center">
          {%- if section.settings.cover_image_mobile -%}
            {%- liquid
              assign cover_image_mobile = section.settings.cover_image_mobile
              assign master_width = cover_image_mobile.src.width | append: 'x' | append: cover_image_mobile.src.height
              render 'responsive-image', image: cover_image_mobile, sizes: master_width, retina: true
            -%}
          {%- else -%}
            <div class="thb-placeholder">
              {{ 'image' | placeholder_svg_tag: 'placeholder_svg_tag' }}
            </div>
          {%- endif -%}
        </div>
        <div class="activity-samsung--email full-width full-height d-flex align-center">
          <div class="d-flex align-center justify-center flex-column full-width full-height">
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when 'discount' -%}
                  <div class="activity-samsung--discount full-width text-center mb-4 d-flex align-center justify-center flex-column">
                    {%- if block.settings.show_code -%}
                      <div
                        id="discount-code"
                        class="discount-code d-flex align-center justify-center"
                        data-code="{{ block.settings.discount_code }}"
                      ></div>
                      <div class="discount-btn my-4 d-flex align-center justify-center">
                        <button
                          id="discount-code-btn"
                          class="position-relative d-flex align-center justify-center px-3 py-2"
                          type="button"
                          data-code="{{ block.settings.discount_code }}"
                        >
                          <span class="discount-copy">
                            {{ block.settings.button_text }}
                          </span>
                          <span class="discount-copied">Code Copied</span>
                          <div class="button-img full-width">
                            {%- render 'responsive-image', image: block.settings.button_image,sizes: block.settings.button_image.src.width | append: 'x' | append: block.settings.button_image.src.height -%}
                          </div>
                        </button>
                      </div>
                      <div class="discount-or">or</div>
                    {%- else -%}
                      <div class="discount-title mb-4">{{ block.settings.discount_title }}</div>
                      <div class="discount-subtitle mb-6">{{ block.settings.discount_subtitle }}</div>
                    {%- endif -%}
                  </div>
                {%- when 'form' -%}
                  {%- render 'email-signup-form',
                    tag: block.settings.tag,
                    link: block.settings.link,
                    utm_source: block.settings.utm_source,
                    utm_medium: block.settings.utm_medium,
                    utm_campaign: block.settings.utm_campaign,
                    activity: true,
                    source: 'samsung',
                    successAlert: 'Thanks, you are all set! <br />
                  Watch your mailbox for the results on 13th May.',
                    errorAlert: 'Oops, something went wrong. Please try again later.',
                    warningAlert: 'This email address is already registered. Please use a different email address. ',
                    agreeText: "Submit your email, and we'll deliver a discount code straight to your inbox for convenient use anytime."
                  -%}
              {%- endcase -%}
            {%- endfor -%}
          </div>
          <div class="activity-samsung--text text-center d-flex align-center justify-center">10% OFF</div>
        </div>
      </div>
      <div class="activity-samsung--remark">
        {{ section.settings.remark }}
      </div>
    </div>
  </div>
</div>
{{- 'activity-samsung.css' | asset_url | stylesheet_tag -}}
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const discountCodeEle = document.getElementById('discount-code');
    if (discountCodeEle) {
      const code = discountCodeEle.dataset.code;
      discountCodeEle.setAttribute('aria-label', '优惠码 ' + code);

      // 把每个字符包在 span
      const fragment = document.createDocumentFragment();
      for (let ch of code) {
        const str = document.createElement('div');
        str.className = 'coupon-char text-center';
        str.textContent = ch;
        fragment.appendChild(str);
      }
      discountCodeEle.appendChild(fragment);
    }

    const btn = document.getElementById('discount-code-btn');
    btn.addEventListener('click', function () {
      const code = btn.getAttribute('data-code');
      navigator.clipboard
        .writeText(code)
        .then(function () {
          btn.classList.add('copied');
          setTimeout(() => {
            btn.classList.remove('copied');
          }, 2000);
        })
        .catch(function (err) {
          alert('Copy failed, please copy manually');
        });
    });
  });
</script>
