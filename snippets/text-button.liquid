<a
  href="{{ url }}"
  title="{{ title | escape }}"
  role="link"
  class="text-button {{ class }} text-button--has-icon"
  {% if disabled %}
    aria-disabled="true"
  {% endif %}
  {% if block %}
    {{- block.shopify_attributes -}}
  {% endif %}
  {% if background_image %}
    style="background-image: url({{ background_image | image_url: width: background_image.width }});"
  {% endif %}
>
  {{- title }}
  <span>{% render 'svg-icons' with 'thb-caret-right' %}</span></a
>
